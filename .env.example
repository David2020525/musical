# MusicHub Environment Variables Configuration
# Copy this file to .env and fill in your actual credentials

# ============================================================================
# DATABASE - PostgreSQL/Neon
# ============================================================================
# Format: postgresql://[user]:[password]@[host]/[dbname]
DATABASE_URL="postgresql://user:password@host:5432/musichub"

# ============================================================================
# CLOUDFLARE R2 - File Storage
# ============================================================================
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-access-key"
R2_BUCKET_NAME="musichub-tracks"
R2_PUBLIC_URL="https://pub-xxxxx.r2.dev"

# ============================================================================
# IYZICO - Payment Gateway (Sandbox)
# ============================================================================
IYZICO_API_KEY="your-sandbox-api-key"
IYZICO_SECRET_KEY="your-sandbox-secret-key"
IYZICO_BASE_URL="https://sandbox-api.iyzipay.com"

# Production settings (when ready):
# IYZICO_BASE_URL="https://api.iyzipay.com"

# ============================================================================
# RESEND - Email Service
# ============================================================================
RESEND_API_KEY="your-resend-api-key"
RESEND_FROM_EMAIL="onboarding@resend.dev"

# When you have a custom domain:
# RESEND_FROM_EMAIL="noreply@yourdomain.com"

# ============================================================================
# JWT - Authentication
# ============================================================================
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"

# ============================================================================
# APP - General Settings
# ============================================================================
APP_URL="http://localhost:3000"
PRODUCTION_URL="https://musichub-4yq.pages.dev"

# Platform commission (percentage)
PLATFORM_COMMISSION_RATE="0.15"  # 15%
